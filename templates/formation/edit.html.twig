{% extends 'base.html.twig' %}
{% block title 'Formations > Ã©dition' %}

{% block body %}
    <div class="offset-0 col-12 offset-lg-4 col-lg-4 padding-home-page">
        <h1 class="text-blue pb-4">Editer la formation</h1>

        {{ form_start(form) }}
        <div class="row mt-2">
            <div class="col-md-12">{{ form_row(form.imageFile) }}</div>
        </div>
        <div class="row">
            <div class="col-md-12">{{ form_row(form.content, { 'attr': {'rows': 4} }) }}</div>
        </div>
        <div class="row">
            <div class="col-md-12">{{ form_row(form.school_name) }}</div>
        </div>
        <div class="row">
            <div class="col-md-12">{{ form_row(form.school_date) }}</div>
        </div>
        <div class="row">
            <div class="col-md-12">{{ form_row(form.path) }}</div>
        </div>
        {{ form_rest(form) }}
        <div class="text-center pb-3">
            <button class="btn btn-primary btn-sm">{{ button|default('Editer') }}</button>
            <a href="{{ path('admin.index') }}" class="btn btn-secondary btn-sm">Annuler</a>
        </div
        {{ form_end(form) }}
    </div>
{% endblock %}
