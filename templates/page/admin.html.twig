                </div>
                <div class="tab-pane fade" id="tab-skill" role="tabpanel" aria-labelledby="skill-tab">
                    {{ include('component/admin/_skill.html.twig') }}
                </div>
                <div class="tab-pane fade" id="tab-formation" role="tabpanel" aria-labelledby="formation-tab">
