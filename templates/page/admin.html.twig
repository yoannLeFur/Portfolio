{% extends 'base.html.twig' %}
{% block title 'Portfolio > Admin' %}

{% block body %}
    <div class="row m-0 padding-admin">
        <div class="col-4"></div>
        <div class="col-4">
            <h1 class="text-blue pb-4">Administration</h1>
        </div>
        <div class="col-4">
            <div class="offset-0 col-12 offset-lg-2 col-lg-8 text-right">
                <a href="{{ path('admin.contact') }}" class="btn btn-md bg-success px-5 text-white">Email<i class="fa fa-chevron-right pl-3" aria-hidden="true"></i></a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="offset-2 col-8">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('primary') %}
                <div class="alert alert-primary">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('danger') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="padding">
        <div class="row">
            <div class="col-12 p-0">
                <div class="card shadow ">
                    <div class="card-header font-weight-bold bg-white text-blue border-bottom-blue text-center px-3 py-2">
                        Home
                    </div>
                    <table class="table table-fixed table-borderless text-center bg-white m-0">
                        <thead>
                        <tr>
                            <th class="td-10">Image</th>
                            <th class="td-20">Titre</th>
                            <th class="td-60">contenu</th>
                            <th class="td-10">
                                <a href="{{ path('admin.home.create') }}" class="btn btn-sm btn-outline-success"
                                   title="Ajouter"><i class="fa fa-plus" aria-hidden="true"></i></a>
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for home in homes %}
                            <tr>
                                <td class="td-10">
                                    {% if home.filename %}
                                        <img class="img-fluid"
                                             src="{{ vich_uploader_asset(home, 'imageFile') | imagine_filter('portrait') }}"
                                             alt="card-img-top">
                                    {% else %}
                                        <img class="img-fluid"
                                             src="{{ 'images/no-image.png' | imagine_filter('portrait') }}"
                                             alt="card-img-top">
                                    {% endif %}
                                </td>
                                <td class="td-20">{{ home.title }}</td>
                                <td class="td-60">{{ home.content }}</td>
                                <td class="td-10">
                                    <a href="{{ path('admin.home.edit', {id: home.id }) }}"
                                       class="btn btn-sm btn-outline-primary"><i
                                                class="fa fa-pencil" aria-hidden="true"></i></a>
                                    <form method="post" action="{{ path('admin.home.delete', {id: home.id}) }}"
                                          style="display: inline-block"
                                          onsubmit="return confirm('Etes-vous sur de vouloir supprimer ces informations?')">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token"
                                               value="{{ csrf_token('delete' ~ home.id) }}">
                                        <button class="btn btn-sm btn-outline-danger"><i class="fa fa-trash-o"
                                                                                         aria-hidden="true"></i>
                                        </button>
                                    </form>
                                </td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-12 p-0">
                <div class="card shadow">
                    <div class="card-header font-weight-bold bg-white text-blue border-bottom-blue text-center px-3 py-2">
                        Présentation
                    </div>
                    <table class="table table-striped table-borderless text-center bg-white m-0">
                        <thead>
                        <tr>
                            <th class="td-10">Image</th>
                            <th class="td-10">Titre</th>
                            <th class="td-30">Contenu</th>
                            <th class="td-30">Contenu 1</th>
                            <th class="td-10">Contenu 2</th>
                            <th class="td-10">
                                <a href="{{ path('admin.about.create') }}" class="btn btn-sm btn-outline-success"
                                   title="Ajouter"><i class="fa fa-plus" aria-hidden="true"></i></a>
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for about in abouts %}
                            <tr>
                                <td class="td-10">
                                    {% if about.filename %}
                                        <img class="img-fluid"
                                             src="{{ vich_uploader_asset(about, 'imageFile') | imagine_filter('portrait') }}"
                                             alt="card-img-top">
                                    {% else %}
                                        <img class="img-fluid"
                                             src="{{ 'images/no-image.png' | imagine_filter('portrait') }}"
                                             alt="card-img-top">
                                    {% endif %}
                                </td>
                                <td class="td-10">{{ about.title }}</td>
                                <td class="text-left td-30">{{ about.content }}</td>
                                <td class="text-left td-30">{{ about.content1 }}</td>
                                <td class="text-left td-10">{{ about.content2 }}</td>
                                <td class="td-10">
                                    <a href="{{ path('admin.about.edit', {id: about.id }) }}"
                                       class="btn btn-sm btn-outline-primary"><i
                                                class="fa fa-pencil" aria-hidden="true"></i></a>
                                    <form method="post" action="{{ path('admin.about.delete', {id: about.id}) }}"
                                          style="display: inline-block"
                                          onsubmit="return confirm('Etes-vous sur de vouloir supprimer ces informations?')">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token"
                                               value="{{ csrf_token('delete' ~ about.id) }}">
                                        <button class="btn btn-sm btn-outline-danger"><i class="fa fa-trash-o"
                                                                                         aria-hidden="true"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-12 p-0">
                <div class="card shadow">
                    <div class="card-header font-weight-bold bg-white text-blue border-bottom-blue text-center px-3 py-2">
                        Expériences
                    </div>
                    <table class="dataTable table table-striped table-borderless text-center bg-white m-0">
                        <thead>
                        <tr>
                            <th class="td-10">Logo</th>
                            <th class="td-20">Titre</th>
                            <th class="td-30">contenu</th>
                            <th class="td-10">date</th>
                            <th class="td-20">Url</th>
                            <th class="td-10">
                                <a href="{{ path('admin.experience.create') }}" class="btn btn-sm btn-outline-success"
                                   title="Ajouter"><i class="fa fa-plus" aria-hidden="true"></i></a>
                            </th>
                        </tr>
                        </thead>
                        <tbody class="scrollbar scrollbar-black bordered-black square thin table-height-experience">
                        {% for experience in experiences %}
                            <tr>
                                <td class="td-10">
                                    {% if experience.filename %}
                                        <img class="img-fluid"
                                             src="{{ vich_uploader_asset(experience, 'imageFile') | imagine_filter('medium') }}"
                                             alt="card-img-top">
                                    {% else %}
                                        <img class="img-fluid"
                                             src="{{ 'images/no-image.png' | imagine_filter('medium') }}"
                                             alt="card-img-top">
                                    {% endif %}
                                </td>
                                <td class="td-20">{{ experience.title }}</td>
                                <td class="td-30">{{ experience.content }}</td>
                                <td class="td-10">{{ experience.experiencedate }}</td>
                                <td class="td-20">{{ experience.path }}</td>
                                <td class="td-10">
                                    <a href="{{ path('admin.experience.edit', {id: experience.id }) }}"
                                       class="btn btn-sm btn-outline-primary"><i
                                                class="fa fa-pencil" aria-hidden="true"></i></a>
                                    <form method="post" action="{{ path('admin.experience.delete', {id: experience.id}) }}"
                                          style="display: inline-block"
                                          onsubmit="return confirm('Etes-vous sur de vouloir supprimer ces informations?')">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token"
                                               value="{{ csrf_token('delete' ~ experience.id) }}">
                                        <button class="btn btn-sm btn-outline-danger"><i class="fa fa-trash-o"
                                                                                         aria-hidden="true"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-12 p-0">
                <div class="card shadow ">
                    <div class="card-header font-weight-bold bg-white text-blue border-bottom-blue text-center px-3 py-2">
                        Projets
                    </div>
                    <table class="dataTable table table-striped table-borderless text-center bg-white m-0" style="width:100%">
                        <thead>
                        <tr>
                            <th class="td-10">Image</th>
                            <th class="td-20">Titre</th>
                            <th class="td-40">contenu</th>
                            <th class="td-20">Url</th>
                            <th class="td-10">
                                <a href="{{ path('admin.projet.create') }}" class="btn btn-sm btn-outline-success"
                                   title="Ajouter"><i class="fa fa-plus" aria-hidden="true"></i></a>
                            </th>
                        </tr>
                        </thead>
                        <tbody class="scrollbar scrollbar-black bordered-black square thin table-height-projet">
                        {% for projet in projets %}
                            <tr>
                                <td class="td-10">
                                    {% if projet.filename %}
                                        <img class="img-fluid"
                                             src="{{ vich_uploader_asset(projet, 'imageFile') | imagine_filter('medium') }}"
                                             alt="card-img-top">
                                    {% else %}
                                        <img class="img-fluid"
                                             src="{{ 'images/no-image.png' | imagine_filter('medium') }}"
                                             alt="card-img-top">
                                    {% endif %}
                                </td>
                                <td class="td-20">{{ projet.title }}</td>
                                <td class="td-40">{{ projet.content }}</td>
                                <td class="td-20">{{ projet.path }}</td>
                                <td class="td-10">
                                    <a href="{{ path('admin.projet.edit', {id: projet.id }) }}"
                                       class="btn btn-sm btn-outline-primary"><i
                                                class="fa fa-pencil" aria-hidden="true"></i></a>
                                    <form method="post" action="{{ path('admin.projet.delete', {id: projet.id}) }}"
                                          style="display: inline-block"
                                          onsubmit="return confirm('Etes-vous sur de vouloir supprimer ces informations?')">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token"
                                               value="{{ csrf_token('delete' ~ projet.id) }}">
                                        <button class="btn btn-sm btn-outline-danger"><i class="fa fa-trash-o"
                                                                                         aria-hidden="true"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-12 p-0">
                <div class="card shadow">
                    <div class="card-header font-weight-bold bg-white text-blue border-bottom-blue text-center px-3 py-2">
                        Compétences
                    </div>
                    <table class="dataTable table table-striped table-borderless text-center bg-white m-0">
                        <thead>
                        <tr>
                            <th class="td-10">Image</th>
                            <th class="td-80">Titre</th>
                            <th class="td-10">
                                <a href="{{ path('admin.skill.create') }}" class="btn btn-sm btn-outline-success"
                                   title="Ajouter"><i class="fa fa-plus" aria-hidden="true"></i></a>
                            </th>
                        </tr>
                        </thead>
                        <tbody class="scrollbar scrollbar-black bordered-black square thin table-height-skill">
                        {% for skill in skills %}
                            <tr>
                                <td class="td-10">
                                    {% if skill.filename %}
                                        <img class="img-fluid"
                                             src="{{ vich_uploader_asset(skill, 'imageFile') | imagine_filter('smallPaysage') }}"
                                             alt="card-img-top">
                                    {% else %}
                                        <img class="img-fluid"
                                             src="{{ 'images/no-image.png' | imagine_filter('smallPaysage') }}"
                                             alt="card-img-top">
                                    {% endif %}
                                </td>
                                <td class="td-80">{{ skill.title }}</td>
                                <td class="td-10">
                                    <a href="{{ path('admin.skill.edit', {id: skill.id }) }}"
                                       class="btn btn-sm btn-outline-primary"><i
                                                class="fa fa-pencil" aria-hidden="true"></i></a>
                                    <form method="post" action="{{ path('admin.skill.delete', {id: skill.id}) }}"
                                          style="display: inline-block"
                                          onsubmit="return confirm('Etes-vous sur de vouloir supprimer ces informations?')">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token"
                                               value="{{ csrf_token('delete' ~ skill.id) }}">
                                        <button class="btn btn-sm btn-outline-danger"><i class="fa fa-trash-o"
                                                                                         aria-hidden="true"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-12 p-0">
                <div class="card shadow ">
                    <div class="card-header font-weight-bold bg-white text-blue border-bottom-blue text-center px-3 py-2">
                        Formation
                    </div>
                    <table class="dataTable table table-striped table-borderless text-center bg-white m-0">
                        <thead>
                        <tr>
                            <th class="td-10">Image</th>
                            <th class="td-40">contenu</th>
                            <th class="td-10">Ecole</th>
                            <th class="td-10">Date</th>
                            <th class="td-20">Url</th>
                            <th class="td-10">
                                <a href="{{ path('admin.formation.create') }}" class="btn btn-sm btn-outline-success"
                                   title="Ajouter"><i class="fa fa-plus" aria-hidden="true"></i></a>
                            </th>
                        </tr>
                        </thead>
                        <tbody class="scrollbar scrollbar-black bordered-black square thin table-height-formation">
                        {% for formation in formations %}
                            <tr>
                                <td class="td-10">
                                    {% if formation.filename %}
                                        <img class="img-fluid"
                                             src="{{ vich_uploader_asset(formation, 'imageFile') | imagine_filter('medium') }}"
                                             alt="card-img-top">
                                    {% else %}
                                        <img class="img-fluid"
                                             src="{{ 'images/no-image.png' | imagine_filter('medium') }}"
                                             alt="card-img-top">
                                    {% endif %}
                                </td>
                                <td class="td-40">{{ formation.content }}</td>
                                <td class="td-10">{{ formation.schoolname }}</td>
                                <td class="td-10">{{ formation.schooldate }}</td>
                                <td class="td-20">{{ formation.path }}</td>
                                <td class="td-10">
                                    <a href="{{ path('admin.formation.edit', {id: formation.id }) }}"
                                       class="btn btn-sm btn-outline-primary"><i
                                                class="fa fa-pencil" aria-hidden="true"></i></a>
                                    <form method="post" action="{{ path('admin.formation.delete', {id: formation.id}) }}"
                                          style="display: inline-block"
                                          onsubmit="return confirm('Etes-vous sur de vouloir supprimer cette formation?')">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token"
                                               value="{{ csrf_token('delete' ~ formation.id) }}">
                                        <button class="btn btn-sm btn-outline-danger"><i class="fa fa-trash-o"
                                                                                         aria-hidden="true"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
