{% extends 'base.html.twig' %}
{% block title 'Portfolio > Formation' %}

{% block body %}
    <div>
        {{ include('layout/nav.html.twig') }}
    </div>
    <div class="offset-0 col-12 offset-lg-4 col-lg-4 padding-projet">
        <h1 class="text-blue pb-4">Mes formations</h1>
    </div>
    <div class="row m-0 mx-md-5 px-md-5">
        {% for formation in formations %}
            <div class="col-12 col-md-6 py-2">
                <div class="card shadow m-0">
                    <div class="row no-gutters shadow">
                        <div class="col-12">
                            <div class="card-body p-0">
                                <a href="{{ formation.path }}">
                                    <div>
                                        {% if formation.filename %}
                                            <img class="img-fluid"
                                                 src="{{ vich_uploader_asset(formation, 'imageFile') | imagine_filter('paysage') }}"
                                                 alt="card-img-top">
                                        {% else %}
                                            <img class="img-fluid"
                                                 src="{{ 'images/no-image.png' | imagine_filter('paysage') }}"
                                                 alt="card-img-top">
                                        {% endif %}
                                    </div>
                                </a>
                            </div>
                            <div class="card-body p-0 py-2 bg-dark text-white">
                                <p class="text-center">{{ formation.content }} {{ formation.schooldate }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    </div>
{% endblock %}
