{#                                           aria-controls="tab-left" aria-selected="true"><i class="fa fa-chevron-left" aria-hidden="true"></i></a>#}
{#                                    </li>#}
{#                                    <li class="nav-item text-center" role="presentation">#}
{#                                        <a class="nav-link" id="right-tab" data-toggle="tab" href="#tab-right" role="tab"#}
{#                                           aria-controls="tab-right" aria-selected="true"><i class="fa fa-chevron-right" aria-hidden="true"></i></a>#}
{#                                    </li>#}
{#                                </ul>#}
{#                            </div>#}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <script src="/js/Carousel.js"></script>
{% endblock %}
