{% extends 'base.html.twig' %}
{% block title 'Contact > Ã©dition' %}

{% block body %}
    <div class="offset-0 col-12 offset-lg-4 col-lg-4 padding-home-page">
        <h1 class="text-blue pb-4">Editer les informations</h1>

        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-12">{{ form_row(form.imageFile) }}</div>
        </div>
        <div class="row">
            <div class="col-md-12">{{ form_row(form.email) }}</div>
        </div>
        <div class="row">
            <div class="col-md-12">{{ form_row(form.phone) }}</div>
        </div>
        <div class="row">
            <div class="col-md-12">{{ form_row(form.linkedinPath) }}</div>
        </div>
        <div class="row">
            <div class="col-md-12">{{ form_row(form.githubPath) }}</div>
        </div>
        {{ form_rest(form) }}
        <div class="text-center pb-3">
            <button class="btn btn-primary btn-md">{{ button|default('Editer') }}</button>
            <a href="{{ path('admin.index') }}" class="btn btn-secondary btn-md">Annuler</a>
        </div
        {{ form_end(form) }}
    </div>
{% endblock %}
