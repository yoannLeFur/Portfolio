<div class="row padding">
    <a href="{{ path('admin.projet.create') }}" class="btn btn-md bg-success px-5 text-white"
       title="Ajouter un nouveau projet"><i class="fa fa-plus pr-3" aria-hidden="true"></i>Nouveau projet</a>
</div>

{% for projet in projets %}
    <div class="card my-5">
        <div class="row no-gutters shadow">
            <div class="col-12 col-lg-4">
                {% if projet.filename %}
                    <img class="img-fluid"
                         src="{{ vich_uploader_asset(projet, 'imageFile') | imagine_filter('paysage') }}"
                         alt="card-img-top">
                {% else %}
                    <img class="img-fluid"
                         src="{{ 'images/no-image.png' | imagine_filter('paysage') }}"
                         alt="card-img-top">
                {% endif %}
            </div>
            <div class="col-12 col-lg-8">
                <div class="card-body">
                    <div class="text-right pb-2">
                        <a href="{{ path('admin.projet.edit', {id: projet.id }) }}"
                           class="btn btn-sm btn-outline-primary"><i
                                    class="fa fa-pencil" aria-hidden="true"></i></a>
                        <form method="post" action="{{ path('admin.projet.delete', {id: projet.id}) }}"
                              style="display: inline-block"
                              onsubmit="return confirm('Etes-vous sur de vouloir supprimer ces informations?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token"
                                   value="{{ csrf_token('delete' ~ projet.id) }}">
                            <button class="btn btn-sm btn-outline-danger"><i class="fa fa-trash-o"
                                                                             aria-hidden="true"></i>
                            </button>
                        </form>
                    </div>
                    <h5 class="card-title">{{ projet.title }}</h5>
                    <p class="card-text m-0"><small class="text-muted">{{ projet.content }}</small></p>
                    <p class="card-text m-0"><small class="text-muted">{{ projet.path }}</small></p>
                </div>
            </div>
        </div>
    </div>
{% endfor %}


