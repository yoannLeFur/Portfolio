{% extends 'base.html.twig' %}

{% block title 'Se connecter' %}


{% block body %}
    <div class="offset-0 col-12 offset-lg-4 col-lg-4 padding-login">

        <h2 class="text-center">Connexion</h2>

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey | trans(error.messagedata,'security') }}
            </div>
        {% endif %}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <form action="{{ path("login") }}" method="post">
            <div class="form-group">
                <label for="username">Email</label>
                <input type="email" id="username" name="_username" class="form-control" value="{{ last_username }}">
            </div>
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="_password" class="form-control">
            </div>
            <div class="row">
                <div class="offset-lg-3 col-lg-6 offset-0 col-12 text-center">
                    <button class="btn btn-md bg-blue text-white">Se connecter</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

